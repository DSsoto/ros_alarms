<launch>
  <!-- Start up alarm server -->
  <node name="ros_alarms_test_server" pkg="ros_alarms" type="alarm_server.py" output="screen">
      <!-- A folder that is in your system path containing all alarm handlers-->
      <param name="handler_module" type="string" value="test_handlers"/>
  </node>

  <!-- List known alarms here -->
  <rosparam ns="known_alarms">
      bus-voltage, thruster-out, height-over-bottom, network-loss
  </rosparam>

  <test test-name="ros_alarms_integration" pkg="ros_alarms" type="ros_alarms_integration_tests" retry="1"/>
</launch>
